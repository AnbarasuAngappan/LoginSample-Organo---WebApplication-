                method: 'get',
                dataType: 'json',
                success: function (data) {

                    var chart = new ej.charts.Chart({

                        //Initializing Primary X Axis
                        primaryXAxis: {

                            valueType: 'Category',
                            labelFormat: 'y',
                            majorGridLines: { width: 0 },
                            intervalType: 'Minutes',
                            edgeLabelPlacement: 'Shift'
                        },

                        //Initializing Primary Y Axis
                        primaryYAxis: {
                            //minimum: 177000,
