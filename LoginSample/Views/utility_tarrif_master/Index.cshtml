@model IEnumerable<LoginSample.Models.utility_tarrif_master>


@{
    ViewBag.Title = "Index";
}

<section class="box-typical">
    <header class="box-typical-header">
        <div class="tbl-row">
            <div class="tbl-cell tbl-cell-title">
                <h3>Utility Tarrif Master</h3>
            </div>
            <div class="tbl-cell tbl-cell-action-bordered">
                <a class="btn btn-primary btn-sm" role="button" href="@Url.Action("Create","utility_tarrif_master")">
                    Add
                </a>
            </div>
        </div>
    </header>
    <div class="box-typical-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="table-edit">
                <tbody>
                    <tr>
                        <th>
                            Utility Provider Name
                        </th>
                        <th>
                            Utility Type
                        </th>
                        @*<th>
                            City
                        </th>
                        <th>
                            State
                        </th>*@
                        <th>
                            Unit Rate
                        </th>
                        @*<th>
                            Charge Back
                        </th>*@
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Utility_Provider_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Utility_Type)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Tarrif_Master)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Charge_Back)
                            </td>*@
                            <td>
                                <div class="btn-group btn-group-sm" style="float: none;">
                                    <a class="tabledit-edit-button btn btn-sm btn-default" role="button" href="@Url.Action("Edit",new { id = item.UiD})">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a class="tabledit-edit-button btn btn-sm btn-default" role="button" href="@Url.Action("Delete",new { id = item.UiD})">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div><!--.box-typical-body-->
</section>
