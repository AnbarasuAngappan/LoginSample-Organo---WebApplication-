@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}


<section class="box-typical">
    <header class="box-typical-header">
        <div class="tbl-row">
            <div class="tbl-cell tbl-cell-title">
                <h3>Users</h3>
            </div>
            <div class="tbl-cell tbl-cell-action-bordered">
                <a href="@Url.Action("Create", "Users")" class="btn btn-primary btn-sm" role="button">
                    Add
                </a>
            </div>
        </div>
    </header>
    <div class="box-typical-body">
        <div class="table-responsive">
            <table id="table-edit" class="table table-bordered table-hover">
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Phone number
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" style="float: none;">
                                <a href="@Url.Action("Edit", "Users", new { id = item.Id })" class="tabledit-edit-button btn btn-sm btn-default" role="button">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                <a class="tabledit-edit-button btn btn-sm btn-default" role="button" href="@Url.Action("Delete","Users", new { id = item.Id})">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div><!--.box-typical-body-->
</section>
