@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div>
    <div class="container-fluid">
        <div class="sign-box">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="sign-avatar no-photo">&plus;</div>
                <header class="sign-title">Sign Up</header>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-Mail" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @placeholder = "Mobile Number" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                </div>
                <button type="submit" class="btn btn-rounded btn-success sign-up">Sign up</button>
                <p class="sign-note">Already have an account? @Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
