@model IEnumerable<LoginSample.Models.house_detail>

@{
    ViewBag.Title = "Index";
}

<section class="box-typical">
    <header class="box-typical-header">
        <div class="tbl-row">
            <div class="tbl-cell tbl-cell-title">
                <h3>House Details</h3>
            </div>
            <div class="tbl-cell tbl-cell-action-bordered">
                <a class="btn btn-primary btn-sm" role="button" href="@Url.Action("Create","house_details")">
                    Add
                </a>
            </div>
        </div>
    </header>
    <div class="box-typical-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="table-edit">
                <tbody>
                    <tr>
                        <th>
                            Site Name
                        </th>
                        <th>
                            House No
                        </th>
                        <th>
                            Owner Name
                        </th>
                        <th>
                            Owner Mobile
                        </th>
                        <th>
                            Owner Email
                        </th>
                        <th>
                            Tenant Name
                        </th>
                        <th>
                            Tenant Email
                        </th>
                        <th>
                            Tenant Mobile
                        </th>
                       
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.site_details.Site_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.House_No)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Owner_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Owner_Mobile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Owner_Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenant_Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenant_Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tenant_Mobile)
                            </td>
                                                        
                            <td>
                                <div class="btn-group btn-group-sm" style="float: none;">
                                    <a class="tabledit-edit-button btn btn-sm btn-default" role="button" href="@Url.Action("Details",new { id = item.HiD})">
                                        <i class="fa fa-list-alt"></i>
                                    </a>
                                    <a class="tabledit-edit-button btn btn-sm btn-default" role="button" href="@Url.Action("Edit",new { id = item.HiD})">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a class="tabledit-edit-button btn btn-sm btn-default" role="button" href="@Url.Action("Delete",new { id = item.HiD})">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><!--.box-typical-body-->
</section>

